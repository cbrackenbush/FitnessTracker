<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fitnesstracker.controllers.TrackerController">
    <Label text="Welcome to the Fitness Tracker!" />
    <Button fx:id="logActivityButton" text="Log Activity" onAction="#showActivityLog" />
    <Button fx:id="viewProgressButton" text="View Progress" onAction="#showProgress" />
    <Button fx:id="setGoalsButton" text="Set Goals" onAction="#showGoals" />
</VBox>
